{% extends 'base.html.twig' %}

{% block title %}Produtos index{% endblock %}

{% block body %}
    <h1>Lista de Produtos </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Preco</th>
                <th>Quantidade</th>
                <th>Descrição</th>
                <th>Validade</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for produto in produtos %}
            <tr>
                <td>{{ produto.id }}</td>
                <td>{{ produto.nome }}</td>
                <td>{{ produto.preco }}</td>
                <td>{{ produto.quantidade }}</td>
                <td>{{ produto.descricao }}</td>
                <td>{{ produto.validade ? produto.validade|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('produtos_show', {'id': produto.id}) }}">Mostrar</a>
                    <a href="{{ path('produtos_edit', {'id': produto.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Nenhum dado foi encontrado</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('produtos_new') }}">Criar novo</a>
{% endblock %}
